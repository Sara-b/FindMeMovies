</head>
<body>
    <div class="topbar animated fadeInLeftBig"></div>

    <!-- Header Starts -->
    <div id="details" class="navbar-wrapper">
        <div class="container">

            <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="top-nav">
                <div class="container">
                    <div class="navbar-header">
                        <!-- Logo Starts -->
                        <a class="navbar-brand" onclick="location.href='@Url.Action("Index", "Home")'" href=""><img src="~/Content/images/logo.png" alt="logo">Find me a movie !</a>
                        <!-- #Logo Ends -->


                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>


                    <!-- Nav Starts -->
                    <div class="navbar-collapse  collapse">
                        <ul class="nav navbar-nav navbar-right scroll">
                            <li onclick="location.href='@Url.Action("Index", "Home")'" class="active"><a href="">Home</a></li>
                            <li><a href="#about">About</a></li>
                        </ul>
                    </div>
                    <!-- #Nav Ends -->

                </div>
            </div>

        </div>
    </div>

            <!-- Cirlce Starts -->
            <div  class="container spacer info">
                <h2 class="text-center wowload fadeInUp">@Model.Movie.Title</h2>
                <div class="row">
                    <div class="movie_content col-sm-6 wowload fadeInLeft">
                        @if (!string.IsNullOrWhiteSpace(Model.Movie.Poster_path))
                        {
                            <img src="@(Model.imageBaseUrl+Model.Movie.Poster_path)" alt="img01" class="poster"/>
                        }
                        else
                        {
                            <img src="~/Content/images/portfolio/black.jpg" alt="img01" class="poster"/>
                        }

                    </div>
                    <div class="movie_content col-sm-6 wowload fadeInRight">
                        <h4>Release date : @Model.Movie.Release_date</h4>
                        <h4>Overview :</h4>
                        <p>@Model.Movie.Overview</p>
                        <h4>Genres : 
                        @foreach (var genre in Model.Movie.Genres)
                        {
                            <span>@genre.Name</span>
                        }
                        </h4>
                        <h4>Votes average : @decimal.Round(Model.Movie.Vote_average, 2) / 10</h4>
                        @if (!string.IsNullOrWhiteSpace(Model.Movie.Tagline))
                        {
                            <blockquote>@Model.Movie.Tagline</blockquote>
                        }
                        <a target="_blank" href="http://www.imdb.com/title/@Model.Movie.Imdb_id" title="See the movie on IMDb"><img class="imdb" src="~/Content/images/IMDB.png"/></a>
                    </div>
                </div>
                </div>


    <!-- Footer Starts -->
    <div id="about" class="footer text-center spacer">
        Don't know what to watch ? Just choose a category and the best and more popular movies of it would appear to your eyes !
        <br />
        <br />
        Sara Brin - Ingésup Bordeaux
        <br /><br />
        Using TMDb Api
    </div>
    <!-- # Footer Ends -->
    <a href="#details" class="gototop "><i class="fa fa-angle-up  fa-3x"></i></a>



    <!-- jquery -->
    <script src="~/Content/assets/jquery.js"></script>

    <!-- wow script -->
    <script src="~/Content/assets/wow/wow.min.js"></script>


    <!-- boostrap -->
    <script src="~/Content/assets/bootstrap/js/bootstrap.js" type="text/javascript"></script>

    <!-- jquery mobile -->
    <script src="~/Content/assets/mobile/touchSwipe.min.js"></script>
    <script src="~/Content/assets/respond/respond.js"></script>

    <!-- gallery -->
    <script src="~/Content/assets/gallery/jquery.blueimp-gallery.min.js"></script>

    <!-- custom script -->
    <script src="~/Content/assets/script.js"></script>

</body>
</html>

